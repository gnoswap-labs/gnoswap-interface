{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noEmit": false,
    "target": "ES5",
    "lib": ["dom", "ES5", "ES6"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declarationDir": "dist/@types",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.*"]
}
