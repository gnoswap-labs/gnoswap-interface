{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@containers/*": ["src/containers/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@repositories/*": ["src/repositories/*"],
      "@resources/*": ["src/resources/*"],
      "@utils/*": ["src/utils/*"],
      "@providers/*": ["src/providers/*"],
      "@states/*": ["src/states/*"],
      "@styles/*": ["src/styles/*"],
      "@views/*": ["src/views/*"],
      "@models/*": ["src/models/*"],
      "@query/*": ["src/react-query/*"],
      "@context/*": ["src/context/*"],
      "@test/*": ["src/test-utils/*"]
    },
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "declaration": true
}